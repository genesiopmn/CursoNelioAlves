package application;


import java.util.Scanner;


public class teste {

	public static void main(String[] args) {		
		Scanner sc = new Scanner(System.in);
		 
		double n = 2;			
		int i = 0;
		double sum = 0.0;
		double[] list = null;
		char operador;
		
			for(i=0; i<n; i++) {
				list = new double[(int) n];
				list[i] = sc.nextDouble();
			}
				System.out.println("Qual operação: ");
				operador = sc.next().charAt(0);
				for(double obj: list) {
				if(operador == '+') {
				sum += list[i];
				}
				else if(operador == '-') {
					sum -= list[i];
					}
				else if(operador == '*') {
					sum *= list[i];
					}
				else if(operador == '/') {
					sum /= list[i];
					}
				}
				System.out.println("resultado: "+sum);
				sc.close();
			}
			
	}





		
	
