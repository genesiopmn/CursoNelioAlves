package application;


import java.util.Scanner;


public class teste {

	public static void main(String[] args) {		
		Scanner sc = new Scanner(System.in);
		 
		double n = 2;			
		int i = 0;
		double resultado = 0.0;
		double[] list = null;
		double[] list1 = null;
		char operador;
		
			for(i=0; i<n; i++) {
				list = new double[(int) n];
				list[i] = sc.nextDouble();
			}
			System.out.println("Qual operação: ");
			operador = sc.next().charAt(0);
			for(i=0; i<n; i++) {
				if(operador == '+') {
				resultado = list[i] + list1[i];
				}
				else if(operador == '-') {
					resultado = list[i] - list1[i];
					}
				else if(operador == '*') {
					resultado = list[i] * list1[i];
					}
				else if(operador == '/') {
					resultado = list[i] / list1[i];
					}
			for(i=0; i<n; i++) {
				list1 = new double[(int) n];
				list1[i] = sc.nextDouble();
			}				
				
				}
				System.out.println("resultado: "+resultado);
				sc.close();
			}
			
	}





		
	
